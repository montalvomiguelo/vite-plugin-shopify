{%- # theme-check-disable UndefinedObject -%}
{%- liquid
  assign css_extensions = 'css|less|sass|scss|styl|stylus|pcss|postcss' | split: '|' 
  assign file_name = vite-tag | split: '/' | last
  assign file_extension = file_name | split: '.' | last
  assign is_css = false
  if css_extensions contains file_extension
    assign is_css = true
  endif
  assign file_url = vite-tag | prepend: '/' | prepend: 'http://localhost:5173'
-%}
{%- if is_css -%}
  <link href="{{ file_url }}" rel="stylesheet">
{%- else -%}
  <script src="{{ file_url }}" type="module"></script>
{%- endif -%}